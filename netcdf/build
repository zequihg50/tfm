set -e

PREFIX='/home/zequi/tfm/sw'
#yum install -y libcurl-devel zlib-devel
sudo apt install -y libcurl4-openssl-dev lib64z1-dev m4

if [ ! -d "netcdf-c" ]; then
	git clone https://github.com/Unidata/netcdf-c
fi
cd netcdf-c
git checkout v4.6.3
CPPFLAGS="-I/usr/include/openmpi -I$PREFIX/include" LDFLAGS="-L$PREFIX/lib" ./configure --prefix $PREFIX --enable-parallel
make
make install
